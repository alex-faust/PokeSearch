<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryDark">@color/color2</item>
        <item name="colorAccent">@color/color3</item>
    </style>

    <style name="StatTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginStart">75dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="StatButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/stat_custom_style</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_width">11dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color1</item>
        <item name="android:textSize">20sp</item>
    </style>

    // theme
    <style name="ShadowTheme">
        <item name="android:ambientShadowAlpha">0.01</item>
        <item name="android:spotShadowAlpha">0.08</item>
    </style>

</resources>