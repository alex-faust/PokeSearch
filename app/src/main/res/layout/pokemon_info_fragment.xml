<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="pokemonViewModel"
            type="com.example.pokesearch.pokemoninfo.PokemonInfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/pokemonSprite"
            android:layout_width="200dp"
            android:layout_height="191dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="104dp"
            app:spriteUrl="@{pokemonViewModel.pokemon.sprite}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars"
            android:contentDescription="@{`A picture of ` + pokemonViewModel.pokemon.name "/>

        <TextView
            android:id="@+id/pokemonName"
            android:layout_width="167dp"
            android:layout_height="41dp"
            android:layout_marginEnd="16dp"
            android:text="@{pokemonViewModel.pokemon.name}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pokemonSprite" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="87dp"
            android:layout_height="34dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="60dp"
            android:text="@{pokemonViewModel.pokemon.dexNum}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pokemonName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>